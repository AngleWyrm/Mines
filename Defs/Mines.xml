<?xml version="1.0" encoding="utf-8"?>
<ThingDefs>
	<ThingDef ParentName="BuildingBase">
		
		<DefName>Mineshaft</DefName>
		<label>mineshaft</label>
		<Description>A place for your pawns to excavate the treasures of the earth</Description>
		<ThingClass>Building_WorkTable</ThingClass>
		<DesignationCategory>Production</DesignationCategory>
		
		<Size>(5,4)</Size>
		<rotatable>false</rotatable>
		<fillPercent>0.75</fillPercent>
		<passability>Impassable</passability>
    	<blockWind>true</blockWind>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToBuild>2400</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>-25</Beauty>
		</statBases>
		<hasInteractionCell>true</hasInteractionCell>
		<interactionCellOffset>(0,0,-2)</interactionCellOffset>

		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<recipes>
			<li>ExcavateSteel</li>
			<li>ExcavatePlasteel</li>
			<li>ExcavateUranium</li>
			<li>ExcavateSilver</li>
			<li>ExcavateGold</li>
			<li>ExcavateJade</li>
		</recipes>

		<stuffCategories>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>100</costStuffCount>
		<costList>
			<Steel>10</Steel>
		</costList>

		<drawerType>MapMeshAndRealTime</drawerType>
    	<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<AltitudeLayer>Building</AltitudeLayer>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>		
		<graphicData>
			<texPath>Mineshaft</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(5,4)</drawSize>
			<drawRotated>false</drawRotated>
		</graphicData>
	</ThingDef>
</ThingDefs>