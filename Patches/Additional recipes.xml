<Patch>
	<!-- ===============================================================================================
         Additional mine-able resource
    -->
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationTest">
				<xpath>*/RecipeDef[@Name="MiningWork"]</xpath>
			</li>
			<!--
				Resource to be mined
			-->
			<li Class="PatchOperationInsert">
				<xpath>*/RecipeDef[@Name="MiningWork"]</xpath>
				<value>
					<RecipeDef ParentName="MiningWork">
						<defName>ExcavateComponents</defName>
						<label>mining compacted machinery</label>
						<description>mining compacted machinery.</description>
						<jobString>Mining compacted machinery.</jobString>
						<!-- 
							components are worth 21 silver/unit
							21 x 332 ticks/silver = 6978 ticks
						-->
						<workAmount>6978</workAmount>
						<products>
							<Component>1</Component>
						</products>
					</RecipeDef>
				</value>
			</li>
		</operations>
	</Operation>
	
	<!-- ===============================================================================================
         Update mine to include new work bill
    -->
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationTest">
				<xpath>*/ThingDef[DefName="Mineshaft"]</xpath>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[DefName="Mineshaft"]/recipes</xpath>
				<value>
					<li>ExcavateComponents</li>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>